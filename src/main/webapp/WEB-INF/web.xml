<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>Blood Donation System</display-name>

  <!-- Welcome file -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Donneur Servlet -->
  <servlet>
    <servlet-name>DonneurServlet</servlet-name>
    <servlet-class>com.donner.controller.DonneurServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DonneurServlet</servlet-name>
    <url-pattern>/donneur</url-pattern>
  </servlet-mapping>

  <!-- Receveur Servlet -->
  <servlet>
    <servlet-name>ReceveurServlet</servlet-name>
    <servlet-class>com.donner.controller.ReceveurServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReceveurServlet</servlet-name>
    <url-pattern>/receveur</url-pattern>
  </servlet-mapping>

  <!-- Association Servlet -->
  <servlet>
    <servlet-name>AssociationServlet</servlet-name>
    <servlet-class>com.donner.controller.AssociationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AssociationServlet</servlet-name>
    <url-pattern>/association</url-pattern>
  </servlet-mapping>

</web-app>
